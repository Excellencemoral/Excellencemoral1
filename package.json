{
  "name": "lit-html",
  "version": "0.5.0",
  "description": "HTML template literals in JavaScript",
  "license": "BSD-3-Clause",
  "repository": "PolymerLabs/lit-html",
  "main": "lit-html.js",
  "module": "lit-html.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "tsc",
    "gen-docs": "typedoc --readme none --mode modules --excludeNotExported --excludePrivate --exclude **/*_test.ts --out ./docs/api .",
    "test": "npm run build && karma start",
    "checksize": "uglifyjs lit-html.js -mc --toplevel | gzip -9 | wc -c"
  },
  "author": "The Polymer Authors",
  "devDependencies": {
    "@types/chai": "^4.0.1",
    "@types/mocha": "^2.2.41",
    "chai": "^4.0.2",
    "karma": "^1.7.1",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-mocha": "^1.3.0",
    "mocha": "^3.4.2",
    "typedoc": "^0.8.0",
    "typescript": "^2.4.1",
    "uglify-es": "^3.0.27"
  },
  "typings": "lit-html.d.ts",
  "dependencies": {}
}
