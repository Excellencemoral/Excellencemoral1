{
  "compilerOptions": {
    "composite": true,
    "target": "es2019",
    "module": "esnext",
    "lib": ["es2020", "DOM", "DOM.Iterable"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noImplicitOverride": true
  },
  "include": [
    "lit-element/**/*.ts",
    "reactive-element/**/*.ts",
    "lit-html/**/*.ts",
    "utils/**/*.ts"
  ],
  "exclude": [
    "lit-html/kitchen-sink-compiled",
    "lit-html/template-heavy-compiled",
    "lit-html/repeat-compiled"
  ]
}
