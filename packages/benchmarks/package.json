{
  "name": "lit-benchmarks",
  "private": true,
  "version": "1.0.0",
  "description": "Benchmarks for lit",
  "license": "BSD-3-Clause",
  "repository": "Polymer/lit-html",
  "author": "The Polymer Project Authors",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "format": "prettier lit-html/* lit-element/* --write",
    "lint": "tslint --project ./",
    "regen-package-lock": "rm -rf node_modules package-lock.json; npm install",
    "benchmark:lit-html-kitchen-sink": "npx tachometer --config lit-html/kitchen-sink/tachometer.json",
    "benchmark:lit-html-kitchen-sink-render": "npx tachometer --config lit-html/kitchen-sink/tachometer-render.json",
    "benchmark:lit-html-kitchen-sink-update": "npx tachometer --config lit-html/kitchen-sink/tachometer-update.json",
    "benchmark:lit-html-kitchen-sink-nop-update": "npx tachometer --config lit-html/kitchen-sink/tachometer-nop-update.json"
  },
  "dependencies": {
    "lit-element": "^3.0.0-pre.0",
    "lit-html": "^2.0.0-pre.0",
    "tachometer": "^0.5.3-pre.0"
  },
  "devDependencies": {
    "prettier": "^2.1.1",
    "typescript": "^4.0.2"
  }
}
