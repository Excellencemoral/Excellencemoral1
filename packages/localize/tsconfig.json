{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2018"],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src/",
    "outDir": "lib/",
    "declaration": true,
    "sourceMap": true,
    "incremental": true,
    "tsBuildInfoFile": "lib/.tsbuildinfo"
  },
  "include": ["src/**/*"]
}
