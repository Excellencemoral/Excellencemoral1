{
  "name": "@lit-labs/cli",
  "version": "0.3.0",
  "publishConfig": {
    "access": "public"
  },
  "description": "Tooling for Lit development",
  "license": "BSD-3-Clause",
  "repository": "lit/lit",
  "author": "Google LLC",
  "homepage": "https://github.com/lit/lit",
  "bugs": "https://github.com/lit/lit/issues",
  "main": "lib/index.js",
  "bin": {
    "lit": "./bin/lit.js"
  },
  "type": "module",
  "exports": "./index.js",
  "engines": {
    "node": ">=14.8.0"
  },
  "scripts": {
    "build": "wireit",
    "build:deps": "wireit",
    "test": "wireit",
    "test:actual": "wireit",
    "test:compile": "wireit"
  },
  "files": [
    "bin",
    "lib",
    "npm-shrinkwrap.json"
  ],
  "keywords": [
    "lit",
    "lit-html",
    "lit-element",
    "LitElement"
  ],
  "dependencies": {
    "@lit-labs/analyzer": "^0.5.0",
    "@lit-labs/gen-utils": "^0.2.0",
    "@lit/localize-tools": "^0.6.1",
    "chalk": "^5.0.1",
    "command-line-args": "^5.2.1",
    "command-line-commands": "^3.0.2",
    "command-line-usage": "^6.1.1",
    "tslib": "^2.0.3"
  },
  "devDependencies": {
    "@lit-internal/tests": "^0.0.0",
    "@types/command-line-args": "^5.2.0",
    "@types/command-line-commands": "^2.0.1",
    "@types/command-line-usage": "^5.0.2"
  },
  "wireit": {
    "build": {
      "command": "tsc --skipLibCheck || echo ''",
      "#comment": "This never fails and always emits output so that we can run tests of code that doesn't type check",
      "clean": "if-file-deleted",
      "dependencies": [
        "build:deps"
      ],
      "files": [
        "tsconfig.json",
        "src/**/*"
      ],
      "output": [
        "lib",
        "test",
        "index.{js,js.map,d.ts}"
      ]
    },
    "build:deps": {
      "dependencies": [
        "../cli-localize:build",
        "../../tests:build",
        "../analyzer:build",
        "../gen-wrapper-react:build",
        "../gen-wrapper-vue:build",
        "../gen-manifest:build",
        "../gen-utils:build"
      ]
    },
    "test": {
      "dependencies": [
        "test:compile",
        "test:actual"
      ]
    },
    "test:compile": {
      "dependencies": [
        "build:deps"
      ],
      "command": "tsc --pretty --noEmit",
      "files": [
        "tsconfig.json",
        "src/**/*",
        "test-goldens/**/*"
      ],
      "output": []
    },
    "test:actual": {
      "#comment": "The quotes around the file regex must be double quotes on windows!",
      "command": "cross-env NODE_OPTIONS=--enable-source-maps uvu test \"_test\\.js$\"",
      "dependencies": [
        "build"
      ],
      "files": [],
      "output": []
    }
  }
}
