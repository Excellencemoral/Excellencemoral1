{
  "name": "@lit-labs/cli-localize",
  "version": "0.1.0",
  "publishConfig": {
    "access": "public"
  },
  "description": "Implements the `lit localize` command. Use from @lit-labs/cli",
  "license": "BSD-3-Clause",
  "repository": "lit/lit",
  "author": "Google LLC",
  "homepage": "https://github.com/lit/lit",
  "bugs": "https://github.com/lit/lit/issues",
  "main": "lib/index.js",
  "type": "module",
  "engines": {
    "node": ">=14.8.0"
  },
  "scripts": {
    "build": "wireit",
    "build:compile": "wireit",
    "build:deps": "wireit",
    "test": "wireit",
    "test:compile": "wireit"
  },
  "files": [
    "lib"
  ],
  "keywords": [
    "lit",
    "localization",
    "localize",
    "lit-cli"
  ],
  "dependencies": {
    "@lit/localize-tools": "^0.6.3"
  },
  "devDependencies": {
    "typescript": "~4.6.2"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "build:deps",
        "build:compile"
      ]
    },
    "build:compile": {
      "command": "tsc --skipLibCheck || echo ''",
      "#comment": "This never fails and always emits output so that we can run tests of code that doesn't type check",
      "clean": "if-file-deleted",
      "files": [
        "tsconfig.json",
        "src/**/*"
      ],
      "output": [
        "lib",
        "test",
        "index.{js,js.map,d.ts}"
      ]
    },
    "build:deps": {
      "dependencies": [
        "../../localize-tools:build:ts"
      ]
    },
    "test": {
      "dependencies": [
        "test:compile"
      ]
    },
    "test:compile": {
      "dependencies": [
        "build:deps"
      ],
      "command": "tsc --pretty --noEmit",
      "files": [
        "tsconfig.json",
        "src/**/*"
      ],
      "output": []
    }
  }
}
