{
  "name": "@lit-labs/ignition-ui",
  "description": "Advanced workflows for Lit",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "build": "wireit",
    "test": "wireit",
    "start": "wireit"
  },
  "dependencies": {
    "@lit/task": "^1.0.0",
    "@vscode/codicons": "^0.0.35",
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "comlink": "^4.4.1",
    "lit": "3.1.2",
    "lit-html": "3.1.2",
    "package-json-type": "^1.0.3",
    "typescript": "^5.3.3"
  },
  "exports": {
    ".": {
      "types": "./unbundled/webview-entrypoint.d.ts",
      "default": "./bundled/webview-entrypoint.js"
    }
  },
  "wireit": {
    "build": {
      "dependencies": [
        "build:dependencies",
        "build:bundled",
        "build:unbundled"
      ]
    },
    "build:bundled": {
      "command": "node ./esbuild.js",
      "dependencies": [
        "build:dependencies"
      ],
      "files": [
        "src/",
        "esbuild.js"
      ],
      "output": [
        "bundled"
      ]
    },
    "build:unbundled": {
      "command": "tsc --build",
      "dependencies": [
        "build:dependencies"
      ],
      "files": [
        "src/",
        "tsconfig.json"
      ],
      "output": [
        ".tsbuildinfo",
        "unbundled"
      ],
      "clean": "if-file-deleted"
    },
    "test": {
      "command": "MODE=dev node ../../tests/run-web-tests.js \"unbundled/test/**/*_test.js\" --config ../../tests/web-test-runner.config.js",
      "dependencies": [
        "build",
        "../../tests:build"
      ],
      "env": {
        "BROWSERS": {
          "external": true
        }
      },
      "files": [],
      "output": []
    },
    "build:dependencies": {
      "dependencies": [
        "../../lit:build",
        "../../task:build"
      ]
    },
    "test:types": {
      "command": "tsc --noEmit",
      "dependencies": [
        "build:dependencies"
      ],
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "output": []
    },
    "start": {
      "command": "web-dev-server --node-resolve --watch --open",
      "service": true,
      "dependencies": [
        "build"
      ],
      "env": {
        "PORT": "8080"
      },
      "files": []
    }
  },
  "devDependencies": {
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@lit-labs/testing": "^0.2.2",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@storybook/types": "^7.6.16",
    "@storybook/web-components": "^7.6.16",
    "@types/vscode-webview": "^1.57.5",
    "@web/dev-server": "^0.4.2",
    "esbuild": "^0.20.1",
    "path-module": "^0.1.2"
  }
}
