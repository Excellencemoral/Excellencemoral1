{
  "name": "@lit-labs/ignition-ui",
  "description": "Advanced workflows for Lit",
  "version": "0.0.1",
  "type": "module",
  "main": "./indexjs",
  "scripts": {
    "build": "wireit",
    "test": "wireit"
  },
  "dependencies": {
    "@lit/task": "^1.0.0",
    "comlink": "^4.4.1",
    "lit": "3.1.2",
    "lit-html": "3.1.2",
    "package-json-type": "^1.0.3",
    "typescript": "^5.3.3"
  },
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "default": "./index.js"
    },
    "./queries.js": {
      "types": "./queries.d.ts",
      "default": "./queries.js"
    }
  },
  "wireit": {
    "build": {
      "command": "tsc --pretty",
      "dependencies": [
        "../../lit:build",
        "../../task:build"
      ],
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "output": [
        "lib",
        "index.{js|js.map|d.ts|d.ts.map}",
        "in-user-iframe.{js|js.map|d.ts|d.ts.map}",
        ".tsbuildinfo"
      ],
      "clean": "if-file-deleted"
    },
    "test": {
      "dependencies": [
        "test:dev"
      ]
    },
    "test:dev": {
      "command": "MODE=dev node ../../tests/run-web-tests.js \"test/**/*_test.js\" --config ../../tests/web-test-runner.config.js",
      "dependencies": [
        "build",
        "../../tests:build"
      ],
      "env": {
        "BROWSERS": {
          "external": true
        }
      },
      "files": [],
      "output": []
    }
  },
  "devDependencies": {
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@lit-labs/testing": "^0.2.2",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@storybook/types": "^7.6.16",
    "@storybook/web-components": "^7.6.16",
    "@types/vscode-webview": "^1.57.5",
    "path-module": "^0.1.2"
  }
}
