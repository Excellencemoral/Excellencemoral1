{
  "private": true,
  "name": "@lit-labs/gen-wrapper-react",
  "description": "Code generator for React wrapper for Lit components",
  "version": "0.0.0",
  "author": "Google LLC",
  "license": "BSD-3-Clause",
  "bugs": "https://github.com/lit/lit/issues",
  "type": "module",
  "main": "lib/index.js",
  "repository": "lit/lit",
  "scripts": {
    "build": "wireit",
    "test": "wireit",
    "test:gen": "wireit",
    "test:output": "wireit"
  },
  "wireit": {
    "build": {
      "command": "tsc --build --pretty",
      "dependencies": [
        "../analyzer:build",
        "../gen-utils:build"
      ],
      "files": [
        "src/**/*",
        "tsconfig.json"
      ],
      "output": [
        "test-gen",
        "test-output",
        "index.{js,js.map,d.ts,d.ts.map}",
        "tsconfig.tsbuildinfo"
      ],
      "clean": "if-file-deleted"
    },
    "test": {
      "dependencies": [
        "test:gen",
        "test:output"
      ]
    },
    "test:gen": {
      "command": "uvu test-gen '.*_test\\.js$'",
      "files": [],
      "output": [
        "gen-output"
      ],
      "dependencies": [
        "build",
        "../react:build",
        "../test-projects/test-element-a:build"
      ]
    },
    "test:output": {
      "command": "node ../../tests/run-web-tests.js \"test-output/**/*_test.js\" --config ../../tests/web-test-runner.config.js",
      "dependencies": [
        "build",
        "test:gen"
      ],
      "files": [
        "../../tests/run-web-tests.js",
        "../../tests/web-test-runner.config.js",
        "../../tests/wtr-config.js",
        "../../tests/rollup-resolve-remap.js"
      ],
      "output": []
    }
  },
  "dependencies": {
    "@lit-labs/analyzer": "^0.1.1",
    "@lit-labs/gen-utils": "^0.0.0"
  },
  "devDependencies": {
    "@esm-bundle/chai": "^4.1.5",
    "@types/chai": "^4.0.1",
    "@types/mocha": "^9.0.0",
    "@types/node": "^17.0.31",
    "typescript": "~4.6.2",
    "uvu": "^0.5.3"
  },
  "engines": {
    "node": ">=14.8.0"
  },
  "files": [
    "index.js"
  ],
  "homepage": "https://github.com/lit/lit",
  "keywords": [
    "lit",
    "lit-html",
    "lit-element",
    "LitElement",
    "generator",
    "cli",
    "react"
  ]
}
