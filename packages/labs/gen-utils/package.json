{
  "name": "@lit-labs/gen-utils",
  "version": "0.2.0",
  "publishConfig": {
    "access": "public"
  },
  "description": "Utilities for lit code generators",
  "license": "BSD-3-Clause",
  "repository": "lit/lit",
  "author": "Google LLC",
  "homepage": "https://github.com/lit/lit",
  "bugs": "https://github.com/lit/lit/issues",
  "main": "index.js",
  "type": "module",
  "engines": {
    "node": ">=14.8.0"
  },
  "scripts": {
    "build": "wireit",
    "test": "wireit"
  },
  "files": [
    "lib"
  ],
  "keywords": [
    "lit",
    "lit-html",
    "lit-element",
    "LitElement",
    "generator",
    "cli"
  ],
  "dependencies": {
    "@lit-labs/analyzer": "^0.5.0"
  },
  "devDependencies": {
    "@lit-internal/tests": "^0.0.0"
  },
  "wireit": {
    "build": {
      "command": "tsc --build --pretty",
      "dependencies": [
        "../analyzer:build",
        "../../tests:build"
      ],
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "output": [
        "lib",
        "test",
        "index.{js,js.map,d.ts,d.ts.map}"
      ],
      "clean": "if-file-deleted"
    },
    "test": {
      "#comment": "The quotes around the file regex must be double quotes on windows!",
      "command": "uvu test \"_test\\.js$\"",
      "dependencies": [
        "build",
        "../../lit:build",
        "../../tests:build"
      ],
      "files": [],
      "output": []
    }
  }
}
