{
  "private": true,
  "name": "@lit-labs/gen-utils",
  "description": "Utilities for lit code generators",
  "version": "0.0.0",
  "author": "Google LLC",
  "license": "BSD-3-Clause",
  "bugs": "https://github.com/lit/lit/issues",
  "type": "module",
  "main": "index.js",
  "repository": "lit/lit",
  "scripts": {
    "build": "wireit",
    "test": "wireit"
  },
  "wireit": {
    "build": {
      "command": "tsc --build --pretty",
      "dependencies": [
        "../analyzer:build"
      ],
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "output": [
        "lib",
        "test",
        "index.{js,js.map,d.ts,d.ts.map}"
      ],
      "clean": "if-file-deleted"
    },
    "test": {
      "command": "uvu test '.*_test\\.js$'",
      "dependencies": [
        "build",
        "../../lit:build"
      ],
      "files": [],
      "output": []
    }
  },
  "dependencies": {
    "@lit-labs/analyzer": "^0.1.1"
  },
  "devDependencies": {
    "@types/node": "^17.0.31",
    "typescript": "~4.6.2",
    "uvu": "^0.5.3"
  },
  "engines": {
    "node": ">=14.8.0"
  },
  "files": [
    "lib"
  ],
  "homepage": "https://github.com/lit/lit",
  "keywords": [
    "lit",
    "lit-html",
    "lit-element",
    "LitElement",
    "generator",
    "cli"
  ]
}
