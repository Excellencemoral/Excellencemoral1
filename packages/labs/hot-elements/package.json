{
  "name": "@lit-labs/hot-elements",
  "version": "0.1.0",
  "description": "HMR helpers for custom elements.",
  "license": "BSD-3-Clause",
  "homepage": "https://lit.dev/",
  "repository": {
    "type": "git",
    "url": "https://github.com/lit/lit.git",
    "directory": "packages/labs/hot-elements"
  },
  "type": "module",
  "main": "index.js",
  "module": "index.js",
  "typings": "index.d.ts",
  "directories": {
    "test": "test"
  },
  "exports": {
    ".": {
      "types": "./development/index.d.ts",
      "development": "./development/index.js",
      "default": "./index.js"
    }
  },
  "files": [
    "/src/",
    "!/src/test/",
    "/lib/",
    "/index.{d.ts,d.ts.map,js,js.map}"
  ],
  "scripts": {
    "build": "wireit",
    "build:ts": "wireit",
    "build:ts:types": "wireit",
    "demo": "wireit"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "build:ts",
        "build:ts:types",
        "../../lit:build"
      ]
    },
    "build:ts": {
      "command": "tsc --build --pretty",
      "dependencies": [
        "../../lit:build:ts:types"
      ],
      "clean": "if-file-deleted",
      "files": [
        "src/**/*.ts"
      ],
      "output": [
        "development",
        "tsconfig.tsbuildinfo"
      ]
    },
    "build:ts:types": {
      "command": "treemirror development . \"**/*.d.ts{,.map}\"",
      "dependencies": [
        "../../internal-scripts:build",
        "build:ts"
      ],
      "files": [],
      "output": [
        "*.d.ts{,.map}",
        "lib/**/*.d.ts{,.map}",
        "test/**/*.d.ts{,.map}"
      ]
    },
    "demo": {
      "dependencies": [
        "../../lit:build"
      ],
      "command": "wds"
    }
  },
  "author": "Google LLC",
  "dependencies": {
    "lit": "^2.5.0",
    "redefine-custom-elements": "^0.1.3"
  },
  "devDependencies": {
    "@lit-internal/scripts": "^1.0.0",
    "@web/dev-server": "^0.1.35",
    "@web/dev-server-esbuild": "^0.3.3",
    "@web/dev-server-hmr": "^0.1.10"
  },
  "publishConfig": {
    "access": "public"
  }
}
