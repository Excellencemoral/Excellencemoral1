{
  "name": "@lit-labs/litespeed",
  "version": "0.0.0",
  "description": "HMR helpers for custom elements.",
  "license": "BSD-3-Clause",
  "homepage": "https://lit.dev/",
  "repository": {
    "type": "git",
    "url": "https://github.com/lit/lit.git",
    "directory": "packages/labs/litespeed"
  },
  "type": "module",
  "main": "index.js",
  "module": "index.js",
  "typings": "index.d.ts",
  "directories": {
    "test": "test"
  },
  "files": [],
  "scripts": {
    "build": "wireit",
    "package": "wireit",
    "install-extension": "wireit"
  },
  "wireit": {
    "build": {
      "files": [
        "main.ts",
        "esbuild.script.mjs"
      ],
      "output": [
        "built/bundle.js"
      ],
      "command": "node esbuild.script.mjs"
    },
    "package": {
      "dependencies": [
        "build",
        "../hot-elements:build"
      ],
      "files": [
        "built"
      ],
      "output": [
        "litespeed.vsix"
      ],
      "command": "cd built && vsce package -o ../litespeed.vsix"
    },
    "install-extension": {
      "dependencies": [
        "package"
      ],
      "#comment": "Useful when manually testing, you can run this in watch mode, and do a > Developer: Reload Window in vscode to pick up the new version of the extension.",
      "command": "code --install-extension ./litespeed.vsix"
    }
  },
  "author": "Google LLC",
  "dependencies": {
    "lit": "^2.5.0",
    "redefine-custom-elements": "^0.1.3"
  },
  "devDependencies": {
    "@lit-internal/scripts": "^1.0.0",
    "@web/dev-server-core": "^0.3.19",
    "@web/dev-server": "^0.1.35",
    "@web/dev-server-esbuild": "^0.3.3",
    "@web/dev-server-hmr": "^0.1.10",
    "@types/vscode": "^1.66.0",
    "@vscode/vsce": "^2.17.0",
    "vscode-languageclient": "^8.0.1",
    "vscode-languageserver": "^8.0.1",
    "vscode-languageserver-textdocument": "^1.0.4"
  },
  "__comment": "The published part of this package is in the 'built' directory",
  "private": true
}
