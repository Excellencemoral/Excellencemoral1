{
  "name": "@lit-labs/ignition",
  "displayName": "Ignition",
  "description": "Advanced workflows for Lit",
  "version": "0.0.1",
  "type": "module",
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onWebviewPanel:ignition"
  ],
  "main": "./extension.cjs",
  "contributes": {
    "configuration": {
      "title": "Ignition",
      "properties": {
        "ignition.showInvisibles": {
          "type": "boolean",
          "default": false,
          "description": "Show text spans that are pure whitespace in the template outline, and leave all whitespace expanded in other text nodes."
        }
      }
    },
    "commands": [
      {
        "command": "ignition.createEditor",
        "title": "Open Ignition Editor"
      },
      {
        "command": "ignition.newComponent",
        "title": "New Component",
        "icon": "$(add)"
      },
      {
        "command": "ignition.deleteComponent",
        "title": "Delete Component",
        "icon": "$(trash)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ignition",
          "title": "Ignition",
          "icon": "resources/flame.svg"
        }
      ]
    },
    "views": {
      "ignition": [
        {
          "id": "ignition-element-view",
          "name": "Elements",
          "contextualTitle": "Ignition Elements"
        },
        {
          "id": "ignition-template-outline",
          "name": "Template Outline",
          "contextualTitle": "Ignition Template Outline"
        },
        {
          "id": "ignition-element-palette",
          "name": "Palette",
          "type": "webview",
          "contextualTitle": "Ignition Palette"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "ignition.newComponent",
          "when": "view == ignition-element-view",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "ignition.deleteComponent",
          "when": "view == ignition-element-view && viewItem == element",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "wireit",
    "pretest": "npm run build && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "wireit",
    "test:unit": "wireit",
    "test:update-goldens": "wireit",
    "test:vscode": "wireit",
    "start:dev": "wireit"
  },
  "dependencies": {
    "@koa/router": "^12.0.1",
    "@lit-labs/analyzer": "^0.11.1",
    "@parse5/tools": "^0.4.0",
    "@types/koa": "^2.14.0",
    "@types/koa-cors": "^0.0.6",
    "@web/dev-server": "^0.4.3",
    "@web/dev-server-core": "^0.7.1",
    "comlink": "^4.4.1",
    "import-meta-resolve": "^4.0.0",
    "koa": "^2.15.0",
    "koa-cors": "^0.0.16",
    "parse5": "^7.1.2"
  },
  "devDependencies": {
    "@lit-labs/ignition-ui": "^0.0.1",
    "@types/koa__router": "^12.0.4",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.16",
    "@types/vscode": "^1.86.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.47.0",
    "glob": "^10.3.10",
    "mocha": "^10.3.0",
    "typescript": "^5.3.3"
  },
  "wireit": {
    "build": {
      "command": "tsc --pretty",
      "dependencies": [
        "../analyzer:build",
        "../ignition-ui:build",
        {
          "script": "./test-projects/hello-world:build",
          "cascade": false
        }
      ],
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "output": [
        "lib",
        "extension.{cjs}"
      ],
      "clean": "if-file-deleted"
    },
    "test": {
      "dependencies": [
        "test:unit",
        "test:vscode"
      ]
    },
    "test:unit": {
      "command": "node --enable-source-maps --test-reporter=spec --test test/lib/*_test.js",
      "dependencies": [
        "build"
      ],
      "files": [
        "test_files/*.ts",
        "test_files/*.golden.js"
      ],
      "output": []
    },
    "test:vscode": {
      "command": "node ./test/runExtensionTest.js",
      "dependencies": [
        "build"
      ]
    },
    "test:update-goldens": {
      "command": "node --enable-source-maps --test-reporter=spec --test test/lib/**/*_test.js",
      "dependencies": [
        "build"
      ],
      "files": [
        "test_files/*.ts",
        "test_files/*.js",
        "!test_files/*.golden.js"
      ],
      "output": [
        "test_files/*.golden.js"
      ],
      "env": {
        "UPDATE_IGNITION_GOLDENS": "true"
      }
    },
    "start:dev": {
      "command": "node ./dev/server.js",
      "service": true,
      "dependencies": [
        "build"
      ]
    }
  }
}
