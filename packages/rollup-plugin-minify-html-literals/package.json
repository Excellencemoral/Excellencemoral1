{
  "name": "@lit/rollup-plugin-minify-html-literals",
  "version": "0.0.0",
  "description": "Rollup plugin to minify HTML template literal strings",
  "main": "index.js",
  "type": "module",
  "types": "index.d.ts",
  "author": "Google LLC",
  "license": "BSD-3-Clause",
  "private": true,
  "files": [
    "index.*",
    "/lib/"
  ],
  "keywords": [
    "rollup-plugin",
    "minify",
    "html",
    "literal",
    "literals",
    "template",
    "tagged",
    "lit-html"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lit/lit.git",
    "directory": "packages/rollup-plugin-minify-html-literals"
  },
  "scripts": {
    "clean": "rimraf {lib/,test/,} && rimraf tsconfig.tsbuildinfo && rimraf index.{js*,d.ts,d.ts.map,} && rimraf {.nyc_output/,coverage/}",
    "prebuild": "npm run clean",
    "build": "tsc && mkdir lib/types/ && cp -r src/lib/types/ lib/types/",
    "test": "nyc mocha -r source-map-support/register test/*.js",
    "coveralls": "cat coverage/lcov.info | coveralls",
    "lint": "prettier --write \"*.{js,ts,json,md}\" \"src/**/*\"",
    "precommit": "lint-staged",
    "release": "standard-version",
    "prepublishOnly": "npm run build"
  },
  "lint-staged": {
    "*.{js,ts,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/index.ts"
    ],
    "exclude": [
      "index.d.ts"
    ],
    "reporter": [
      "html",
      "lcovonly",
      "text-summary"
    ],
    "all": true
  },
  "dependencies": {
    "clean-css": "^5.3.2",
    "html-minifier": "^4.0.0",
    "magic-string": "^0.30.0",
    "rollup-pluginutils": "^2.8.2",
    "typescript": "^5.1.3"
  },
  "peerDependencies": {
    "rollup": "^0.65.2 || ^1.0.0 || ^2.0.0 || ^3.0.0"
  },
  "devDependencies": {
    "@types/html-minifier": "^4.0.2",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.2.5",
    "@types/sinon": "^10.0.15",
    "chai": "^4.3.7",
    "coveralls": "^3.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1",
    "rollup": "^3.24.0",
    "sinon": "^15.1.0",
    "source-map-support": "^0.5.21",
    "standard-version": "^9.5.0",
    "ts-node": "^10.9.1"
  }
}