{
  "name": "@lit/compiler",
  "version": "0.0.0",
  "description": "A Lit compiler",
  "author": "Google LLC",
  "homepage": "https://github.com/Lit/Lit/tree/main/packages/compiler",
  "license": "BSD-3-Clause",
  "type": "module",
  "main": "lib/compiler.js",
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Lit/Lit.git",
    "directory": "packages/compiler"
  },
  "scripts": {
    "build": "wireit",
    "build:ts": "wireit",
    "test": "wireit",
    "test:compiled-lit-html": "wireit"
  },
  "bugs": {
    "url": "https://github.com/Polymer/lit-html/issues"
  },
  "dependencies": {
    "@types/parse5": "^5.0.3",
    "lit-html": "^2.7.4",
    "parse5": "^7.1.2",
    "typescript": "^5.1.3"
  },
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.12",
    "@types/node-fetch": "^2.5.7",
    "chai": "^4.2.0",
    "mocha": "^8.2.1",
    "prettier": "^2.2.1",
    "source-map-support": "^0.5.19"
  },
  "wireit": {
    "test": {
      "command": "uvu test \".*_test\\.js$\"",
      "dependencies": [
        "build"
      ]
    },
    "build": {
      "dependencies": [
        "build:ts",
        "../lit-html:build"
      ]
    },
    "build:ts": {
      "command": "tsc --build --pretty",
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "output": [
        "lib",
        "test",
        "tsconfig.tsbuildinfo"
      ],
      "clean": "if-file-deleted"
    },
    "test:compiled-lit-html": {
      "command": "node test/compile_lit_html.js",
      "dependencies": [
        "build:ts"
      ]
    }
  }
}
